page{
  background: #E9EDF1;
}
.header{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0;
  margin: 0;
  text-align: center;
  width: 100%;
  background: #E70012;
  color: #fff;
  font-size: 14px;
  position: relative;
}
.header>image{
  vertical-align: middle;
  margin-top: 6rpx;
  height: 30rpx;
  width: 400rpx;
}
.header .return{
  position: absolute;
  right:20rpx;
  top: 20rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 11;
}
.header .return image{
  width: 100%;
  height: 100%;
}
.list .listText{
  font-size: 14px;
  width: 100%;
  border-radius: 14rpx;
  overflow: hidden;
  background: #fff;
}
.content{
  background: #E9EDF1;
  padding:0 20rpx 160rpx;
}
.listHader{
  position: relative;
  text-align: center;
  color: #E43E16;
  padding: 40rpx 0 ;
}
.listHader image{
  position: absolute;
  width:250rpx;
  height: 60rpx;
  z-index: 12;
  left: 50%;
  top: 26rpx;
  margin-left: -125rpx;
}
.listImg{
  position: relative;
  height: 400rpx;
}

.listImg>image{
  position: absolute;
  z-index: 11;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
}
.listImg .jp{
  display: inline-block;
  position: absolute;
  bottom: 0;
  height: 54rpx;
  line-height: 54rpx;
  padding: 0 50rpx;
  right: 0;
  z-index: 12;
  background: #E43E16;
  color: #fff;
  border-radius: 14rpx 0 0 0;
  

}
.listBot{
  padding: 0 20rpx 30rpx;
}
.listBot .firstTxt{
  padding: 20rpx 0;
  font-weight: 800;
}
.listBot .firstTxt .first{
  margin-right:10rpx;
}
.listBot .time{
 font-size: 12px;
}
.listBot .left{
  color: #999999;
}
.listBot .red{
  text-align: right;
  color: #E43E16
}
.listBot .divider{
  height:50rpx!important;
}
.more .left{
  float: left;
}
.more .left image{
  float: left;
  width: 25px;
  height: 25px;
  margin-right: 20rpx;
}
.more .left .txt{
  float: left;
  height:24px;
  line-height: 24px;
}
.listBot .cell{
  padding-top: 4rpx!important;
}
.contact{
  width: 240rpx;
  height: 80rpx;
  line-height:80rpx;
  margin: 80rpx auto; 
  background: #fff;
  color: #666666;
  font-size:32rpx;
  text-align: center;
  border-radius: 40rpx;
}

.contact image{
  vertical-align: middle;
  margin-top: -6rpx;
  width: 32rpx;
  height:32rpx;
  margin-right: 8rpx;
}





