page{
  background: #E9EDF1;
}
.modal{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100000;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5)
}
.modal .modalCon{
  position: absolute;
  left: 20%;
  top: 50%;
  margin-top: -200rpx;
  width: 60%;
  height: 240rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.modalCon button{
  color: #09BA07;
  font-size: 36rpx;
  border-radius: 0;
  border-top: 1px solid #ccc;
  height: 120rpx;
  line-height: 120rpx;
  width: 100%;
}
.modalCon button:active{
  background: #ccc;
}
.modalCon .place{
  font-size: 32rpx;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
}
.header{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0;
  margin: 0;
  text-align: center;
  width: 100%;
  background: #E70012;
  color: #fff;
  font-size: 32rpx;
  position: relative;
}
.redBtn{
  text-align: center;
  margin: 30rpx 0;
}
.redBtn .btn{
  padding: 20rpx 80rpx;
  height: 40px;
  border-radius: 40rpx;
  background: #E43E16;
  color: #fff;
  line-height: 80rpx;
}
.redBtn navigator{
  background: transparent;
  display: inline-block;
}
.redBtn .btn:active{
  background: rgb(230, 85, 49);
}
.header>image{
  vertical-align: middle;
  margin-top: 6rpx;
  height: 30rpx;
  width: 400rpx;
}
.header .return{
  position: absolute;
  right:20rpx;
  top: 20rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 11;
}
.header .return image{
  width: 100%;
  height: 100%;
}
.list .listText{
  font-size: 32rpx;
  width: 100%;
  border-radius: 14rpx;
  overflow: hidden;
  background: #fff;
}
.content{
  background: #E9EDF1;
  padding:0 20rpx 160rpx;
}
.listHader{
  position: relative;
  text-align: center;
  color: #E43E16;
  padding: 40rpx 0 ;
}
.listHader image{
  position: absolute;
  width:250rpx;
  height: 60rpx;
  z-index: 12;
  left: 50%;
  top: 26rpx;
  margin-left: -125rpx;
}
.listImg{
  position: relative;
  height: 400rpx;
}

.listImg>image{
  position: absolute;
  z-index: 11;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
}
.listImg .jp{
  display: inline-block;
  position: absolute;
  bottom: 0;
  height: 54rpx;
  line-height: 54rpx;
  padding: 0 50rpx;
  right: 0;
  z-index: 12;
  background: #E43E16;
  color: #fff;
  border-radius: 14rpx 0 0 0;
  

}
.listBot{
  padding: 0 20rpx 30rpx;
}
.listBot .firstTxt{
  padding: 20rpx 0;
  font-weight: 800;
}
.listBot .firstTxt .first{
  margin-right:10rpx;
}
.listBot .time{
 font-size: 28rpx;
}
.listBot .left{
  color: #999999;
}
.listBot .red{
  text-align: right;
  color: #E43E16
}
.listBot .divider{
  height:50rpx!important;
}
.more .left{
  float: left;
}
.more .left image{
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.more .left .txt{
  float: left;
  height:48rpx;
  line-height:48rpx;
}
.listBot .cell{
  padding-top: 4rpx!important;
}
.contact{
  width: 240rpx;
  height: 80rpx;
  line-height:80rpx;
  margin: 80rpx auto; 
  background: #fff;
  color: #666666;
  font-size:32rpx;
  text-align: center;
  border-radius: 40rpx;
}

.contact image{
  vertical-align: middle;
  margin-top: -6rpx;
  width: 32rpx;
  height:32rpx;
  margin-right: 8rpx;
}
.shareMode{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10000!important;
  background: rgba(0,0,0,.3)
}

.share{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10000!important;
  background: #fff;
  text-align: center;
  width: 100%;
  padding-top:60rpx; 
}
.share .img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 60rpx auto 20rpx;
}
.share .href{
  color: #999999;
  font-size:32rpx!important;
  width: 50%;
  float: left;
  text-align: center;
  padding-bottom: 40rpx;
}
button{
  background: none;
  padding: 0;
  margin: 0;
  font-size: 32rpx;
  color: #999;
}
button wx-cover-view{
  line-height: 40rpx;
}
 button::after{
  background: none!important;
  border: none!important;
  padding: 0;
  margin: 0;
}
.share .cancel{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #333333;
  border-top: 1px solid #ccc;
}
.share .cancel:active{
  background: #ddd
}
.shareTitleImg{
  float: left;
  width: 100rpx;
  height: 8rpx;
  vertical-align: middle;
  margin-top: 20rpx;
}
.shareAddress{
  width: 170px;
  margin: 0 auto;
  text-align: center;
}
.shareTitl{
  float: left;
  margin: 0 10px;
  font-size: 38rpx;
  color: #333;
  
}
/* 保存海报 */
.saveImg{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
  z-index: 999999999999999!important;
  left: 0;
  top: 0;
  box-sizing: border-box;
  padding: 140rpx 60rpx;
  text-align: center;
}

.saveImg .close image{
  width: 60rpx;
  height: 60rpx;
  float: right;
  border-radius: 50%;
  margin-top: -70rpx;
}
.saveImg .saveImageToPhotosAlbum{
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  background: #09BA07;
  color: #fff;
  border-radius: 50rpx;
  font-size: 36rpx;
  margin:  40rpx auto 0;
}
.saveImg .saveImageToPhotosAlbum:active{
  background: rgb(42, 204, 40)
}
