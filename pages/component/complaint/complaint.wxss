/* pages/component/complaint/complaint.wxss */
page{
   background: #E9EDF1;
}
.wrap{
  box-sizing: border-box;
  width: 100%;
  background: #E9EDF1;
  padding: 0px 10px 60px;
}
.title{
  font-size: 16px;
  margin: 10px 0;
  color: #333333; 
}
.textarea{
  width: 100%;
  position: relative;
  height: 200px;
}
.textarea .num{
  position: absolute;
  bottom: 10px;
  right: 10px;
  font-size: 14px;
  color: #333333
}
textarea{
  box-sizing: border-box;
  width: 100%;
  height: 200px!important;
  background: #fff;
  color: #666;
  font-size: 14px;
  border-radius: 5px;
  padding: 10px 10px
}
input{
  box-sizing: border-box;
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  text-indent: 10px;
  background: #fff;
  border-radius: 5px;
  padding:0 10px 
}
.submit:active{
  background: rgb(235, 85, 97)
}
.submit{
  width: 100%;
  height: 60px;
  font-size: 18px;
  text-align: center;
  line-height: 60px;
  background: #E70012;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.footer{
  text-align: center;
  padding: 100rpx 0 60px;
}
.footer image{
  width: 240rpx;
  height: 50rpx;
}