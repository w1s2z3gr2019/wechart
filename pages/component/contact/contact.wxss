

.wrap{
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  background: #E9EDF1;
  height: 100%;
  padding: 0px 10px 60px;
  overflow: hidden;
  text-align: center;
  font-size: 14px;
  color: #999999
}
.qrCode{
  margin: 80px auto 15px;
  width: 120px;
  height: 120px;
  background: #fff;
  padding: 20px;
  border-radius: 5px;
}
.qrCode image{
  width: 100%;
  height: 100%;
}
.footer{
  text-align: center;
  padding: 100rpx 0 60px;
}
.footer image{
  width: 240rpx;
  height: 50rpx;
}